---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">

  <div>
    <div class="text-4xl w-full font-bold mb-5">Projects</div>
    <text class="text-lg">
      Step into the realm of my portfolio, where I unveil an assortment of categorized enchanting side projects I've conjured into existence.
    </text>
  </div>
  
  <div class="mt-10">
    <!-- <div class="text-2xl w-full font-bold mb-5">Machine Learning</div> -->
  </div>

  <HorizontalCard
    title="Demo Project 1"
    img="/projects/post_img.webp"
    url="#"
    badge="FOSS",
    tags = {[
      "Python",
      "Machine Learning",
    ]}>
  />
  <div slot="description">
    <p>Built with the Astro framework, this website is optimized for speed and search engines, designed with recruiters and tech enthusiasts in mind to efficiently access information about my skills, experience, and projects.</p>
  </div>

  <div class="divider my-0"></div>
</BaseLayout>
