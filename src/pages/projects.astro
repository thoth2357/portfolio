<script>
document.addEventListener("DOMContentLoaded", function () {
    const tabs = document.querySelectorAll('[role="tab"]');
    const cardsContainer = document.getElementById('cards-container');

	// Hide all cards initially
	const cards = document.querySelectorAll('.horizontal-card');
	cards.forEach(card => {
		card.style.display = 'none';
	});

	// Show cards corresponding to the initial active tab
	const initialActiveTab = document.querySelector('.tab-active');
	if (initialActiveTab) {
		const initialTag = initialActiveTab.getAttribute('data-tag');
		const initialTagCards = document.querySelectorAll(`.horizontal-card[data-tags*="${initialTag}"]`);
		initialTagCards.forEach(card => {
		card.style.display = 'block';
		});
	}
    tabs.forEach(tab => {
		tab.addEventListener('click', function () {
			// Remove active class from all tabs
			tabs.forEach(t => t.classList.remove('tab-active'));
			
			// Add active class to the clicked tab
			this.classList.add('tab-active');

			// Get the clicked tab's data-tag attribute value
			const selectedTag = this.getAttribute('data-tag');
			console.log(selectedTag);

			// Show/hide cards based on the selected tag
			const cards = document.querySelectorAll('.horizontal-card');
			// console.log(cards);

			cards.forEach(card => {
				const cardTags = card.getAttribute('data-tags').split(',');
				console.log(card, cardTags);
				if (cardTags.includes(selectedTag)) {
					card.style.display = 'block';
				} else {
					card.style.display = 'none';
				}
				});
		});
    });
});
</script>
