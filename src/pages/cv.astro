<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.getElementById('competenciesCarousel');
    const prevButton = document.getElementById('prevCompetency');
    const nextButton = document.getElementById('nextCompetency');
    const cardWidth = 300 + 24; // card width + gap
    let position = 0;

    const moveCarousel = (direction) => {
      const maxPosition = (carousel.scrollWidth - carousel.clientWidth);
      position = Math.max(-maxPosition, Math.min(0, position + direction * cardWidth));
      carousel.style.transform = `translateX(${position}px)`;
    };

    prevButton.addEventListener('click', () => moveCarousel(1));
    nextButton.addEventListener('click', () => moveCarousel(-1));
  });
</script>